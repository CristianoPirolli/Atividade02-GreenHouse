@model GreenHouse.Models.Plant

@{
    ViewData["Title"] = "Detalhes da Planta";
}

<h1>Detalhes da Planta</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PlantName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PlantName)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.SensorValue)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SensorValue)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.SensorEvent)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SensorEvent)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.PlantName" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
</div>
